<?xml version="1.0"?>
<odoo>
    <template id="home" name="HRStore Home">
        <head>
            <t t-call-assets="HRStore.my_custom_assets" tjs="false"/>
            <t t-call-assets="HRStore.my_custom_assets" tcss="false"/>
        </head>
        <body class="body-wrapper">
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <nav class="navbar navbar-expand-lg  navigation">
                                <a class="navbar-brand" href="/home">
                                    <img src="/HRStore/static/src/images/logo.jpg" height="100" width="220"/>
                                </a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse"
                                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                    <ul class="navbar-nav ml-auto main-nav ">
                                        <li class="nav-item active">
                                            <a class="nav-link" href="/home">首页</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=2">培训产品</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=1">活动策划</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=3">精美商品</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=4">法律服务</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="dashboard.html">在线客服</a>
                                        </li>
                                    </ul>
                                    <t t-if="user">
                                        <ul class="navbar-nav ml-auto mt-10">
                                            <li class="nav-item">
                                                <a href="/user_profile/#{user.user_id}">
                                                    <img src="\HRStore\static\src\images\my.png" height="60px"
                                                         width="50px"/>
                                                </a>
                                            </li>
                                        </ul>
                                    </t>
                                    <t t-else="">

                                        <ul class="navbar-nav ml-auto mt-10">
                                            <li class="nav-item">
                                                <a class="nav-link login-button" href="/login">登陆</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link add-button" href="/sign_up">注册</a>
                                            </li>
                                        </ul>
                                    </t>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </section>

            <!--===============================
            =            Hero Area            =
            ================================-->

            <section class="hero-area bg-1 text-center overly">
                <!-- Container Start -->
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Header Contetnt -->
                            <div class="content-block">
                                <h1>Buy &amp; Sell Near You</h1>
                                <p>Join the millions who buy and sell from each other
                                    <br/>
                                    everyday in local communities around the world
                                </p>
                                <div class="short-popular-category-list text-center">
                                    <h2>Popular Category</h2>

                                </div>

                            </div>
                            <!-- Advance Search -->
                            <div class="advance-search">
                                <form action="/search_product" method="post">
                                    <div class="row">
                                        <!-- Store Search -->

                                        <div class="block d-flex ">
                                            <input type="hidden" name="csrf_token"
                                                   t-att-value="request.csrf_token()"/>
                                            <input type="text" class="input-search" id="search" placeholder="站内查找..."/>
                                            <!-- Search Button -->
                                            <input type="submit" class="btn btn-main" t-att-value="查找"/>
                                            <!--<button class="btn btn-main">查找</button>-->
                                        </div>

                                    </div>
                                </form>

                            </div>

                        </div>
                    </div>
                </div>
                <!-- Container End -->
            </section>


            <!--===========================================
            =            Popular deals section            =
            ============================================-->

            <section class="popular-deals section bg-gray">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="section-title">
                                <h2>商 品 精 选</h2>
                                <p>你 想 要 的 样 子，我 们 都 有</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <t t-if="products">
                            <t t-foreach="products" t-as="product">
                                <!---这是一个div-->
                                <div class="col-sm-12 col-lg-4">
                                    <!-- product card -->
                                    <div class="product-item bg-light">
                                        <div class="card">
                                            <div class="thumb-content">
                                                <!-- <div class="price">$200</div> -->
                                                <a href="">
                                                    <span t-field="product.pro_image"
                                                          t-options="{'widget': 'image', 'class': 'mx-auto d-block img-thumbnail'}"/>
                                                    <!--<span  t-field="product.pro_image" t-field-options='{"widget": "image"}'/>
                                                    <img class="card-img-top img-fluid" src="images/products/fl2.jpg"
                                                         alt="Card image cap"/>-->
                                                </a>
                                            </div>
                                            <div class="card-body">
                                                <h4 class="card-title">
                                                    <a href="">
                                                        <span t-esc="product.pro_name"></span>
                                                    </a>
                                                </h4>
                                                <ul class="list-inline product-meta">
                                                    <li class="list-inline-item">
                                                        <t t-if="product.pro_type=='1'">活动策划</t>
                                                        <t t-if="product.pro_type=='2'">培训产品</t>
                                                        <t t-if="product.pro_type=='3'">精美商品</t>
                                                        <t t-if="product.pro_type=='4'">法律服务</t>
                                                    </li>
                                                </ul>
                                                <p class="card-text" t-esc="product.pro_view"></p>
                                            </div>
                                        </div>
                                    </div>
                                    <!---一个商品div-->

                                </div>
                            </t>
                        </t>
                        <!---这个div到这里结束-->


                    </div>
                </div>
            </section>

            <!--============================
            =            Footer            =
            =============================-->
            <footer class="footer section section-sm">
                <!-- Container Start -->
                <div class="container">
                    <div class="row offset-md-1 offset-lg-0 block about">
                        <img src="\HRStore\static\src\images\logo.jpg" height="100" width="200"/>
                        <div class="footer-text">
                        </div>
                        <ul>
                            <li>
                                <a href="#">增值电信业务经营许可证：京B2-20080224</a>
                            </li>
                            <li>
                                <a href="#">值电信业务经营许可证（跨地区）： B2-20150210</a>
                            </li>
                            <li>
                                <a href="#">北京市网络食品销售第三方平台提供者备案：京网食A33010001</a>
                                <br/>
                            </li>
                            <li>
                                <a href="#">信息网络传播视听许可证：1109364号</a>
                            </li>
                            <li>
                                <a href="#">出版物网络交易平台服务经营备案号：新出发京备字第002号</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Container End -->
            </footer>
            <!-- Footer Bottom -->
            <footer class="footer-bottom">
                <!-- Container Start -->
                <div class="container">
                    <p type="center">Copyright © 2019.7-现在 HR商城 版权所有</p>
                </div>
                <!-- Container End -->
                <!-- To Top -->
                <div class="top-to">
                    <a id="top" class="" href="">
                        <i class="fa fa-angle-up"></i>
                    </a>
                </div>
            </footer>


        </body>
    </template>

</odoo>