<?xml version="1.0"?>
<odoo>
    <!---->
    <template id="forum" name="forum">
        <head>
            <t t-call-assets="HRStore.my_custom_assets" tjs="false"/>
            <t t-call-assets="HRStore.my_custom_assets" tcss="false"/>
        </head>

        <body class="body-wrapper">
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <nav class="navbar navbar-expand-lg  navigation">
                                <a class="navbar-brand" href="/home">
                                    <img src="/HRStore/static/src/images/logo.jpg" height="100" width="220"/>
                                </a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse"
                                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                    <ul class="navbar-nav ml-auto main-nav ">
                                        <li class="nav-item active">
                                            <a class="nav-link" href="/home">首页</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=2">培训产品</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=1">活动策划</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=3">精美商品</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=4">法律服务</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/customer_service">在线客服</a>
                                        </li>
                                    </ul>
                                    <t t-if="request.session.user_id">
                                        <ul class="navbar-nav ml-auto mt-10">
                                            <li class="nav-item">
                                                <form action="/user_profile" method="post">
                                                    <input type="hidden" name="csrf_token"
                                                           t-att-value="request.csrf_token()"/>
                                                    <input type="hidden" name="user_id"
                                                           t-att-value="request.session.user_id"/>
                                                    <input type="image"
                                                           src="\HRStore\static\src\images\my.png" height="60px"/>
                                                </form>
                                            </li>
                                        </ul>
                                    </t>
                                    <t t-else="">
                                        <ul class="navbar-nav ml-auto mt-10">
                                            <li class="nav-item">
                                                <a class="nav-link login-button" href="/login">登陆</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link add-button" href="/sign_up">注册</a>
                                            </li>
                                        </ul>
                                    </t>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </section>
            <!--=================================
            =            comment            =
            ==================================-->

            <section class="blog single-blog section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 offset-md-1 col-lg-8 offset-lg-0" style="margin-right:70px;">
                            <div class="sidebar">
                                <!-- Category Widget -->
                                <div class="widget dashboard-container my-adslist">
                                    <!-- Widget Header -->
                                    <h5 class="widget-header">
                                        我要发贴。。。
                                    </h5>
                                    <div class="goods-buy" style="margin:0 auto;margin-bottom:20px;">

                                        <form action="/add_forum" method="post">
                                            <input type="hidden" name="csrf_token"
                                                   t-att-value="request.csrf_token()"/>
                                            <input type="hidden" name="user_id"
                                                   t-att-value="user_id"/>
                                            <div class="form-group">
                                                <input type="text" name="title"
                                                       placeholder="标题："/>
                                                <textarea name="content" class="form-control" rows="7"></textarea>
                                            </div>

                                            <div class="form-group">
                                                <label for="name">标签</label>
                                                <select class="form-control" name="label">
                                                    <option value="1">公告</option>
                                                    <option value="2">人员招聘</option>
                                                    <option value="3">求职</option>
                                                    <option value="4">我要提问</option>
                                                    <option value="5">其它</option>
                                                </select>
                                            </div>

                                            <button type="submit" class="btn add-button">发布</button>

                                        </form>

                                    </div>

                                </div>

                            </div>
                            <div class="widget dashboard-container my-adslist row">
                                <form action="/forum" method="post">
                                    <input type="hidden" name="csrf_token"
                                           t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="user_id"
                                           t-att-value="user_id"/>
                                    <button type="submit" class="btn btn-md btn-primary">全部</button>
                                </form>
                                <form action="/get_forum" method="post">
                                    <input type="hidden" name="csrf_token"
                                           t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="user_id"
                                           t-att-value="user_id"/>
                                    <input type="hidden" name="label"
                                           t-att-value="1"/>
                                    <button type="submit" class="btn btn-md btn-primary">公告</button>
                                </form>
                                 <form action="/get_forum" method="post">
                                    <input type="hidden" name="csrf_token"
                                           t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="user_id"
                                           t-att-value="user_id"/>
                                    <input type="hidden" name="label"
                                           t-att-value="2"/>
                                    <button type="submit" class="btn btn-md btn-primary">人员招聘</button>
                                </form>
                                 <form action="/get_forum" method="post">
                                    <input type="hidden" name="csrf_token"
                                           t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="user_id"
                                           t-att-value="user_id"/>
                                    <input type="hidden" name="label"
                                           t-att-value="3"/>
                                    <button type="submit" class="btn btn-md btn-primary">求职</button>
                                </form>
                                 <form action="/get_forum" method="post">
                                    <input type="hidden" name="csrf_token"
                                           t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="user_id"
                                           t-att-value="user_id"/>
                                    <input type="hidden" name="label"
                                           t-att-value="4"/>
                                    <button type="submit" class="btn btn-md btn-primary">我要提问</button>
                                </form>
                                 <form action="/get_forum" method="post">
                                    <input type="hidden" name="csrf_token"
                                           t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="user_id"
                                           t-att-value="user_id"/>
                                    <input type="hidden" name="label"
                                           t-att-value="5"/>
                                    <button type="submit" class="btn btn-md btn-primary">其他</button>
                                </form>
                            </div>
                            <t t-if="forum_list">
                                <t t-foreach="forum_list" t-as="forum">
                                    <div class="widget dashboard-container my-adslist">
                                        <h3 class="widget-header">
                                            <t t-esc="forum.title"></t>
                                        </h3>
                                        <p t-esc="forum.username"></p>
                                        <span t-esc="forum.content"></span>
                                        <p>
                                            <span id="time" t-esc="forum.create_date">2019年8月13日</span>
                                        </p>
                                        <button class="btn btn-sm btn-info">
                                            <t t-if="forum.label=='1'">公告</t>
                                            <t t-if="forum.label=='2'">人员招聘</t>
                                            <t t-if="forum.label=='3'">求职</t>
                                            <t t-if="forum.label=='4'">我要提问</t>
                                            <t t-if="forum.label=='5'">其他</t>

                                        </button>

                                    </div>
                                </t>
                            </t>
                        </div>

                        <div class="col-md-3 offset-md-1 col-lg-3 offset-lg-0">
                            <div class="sidebar">
                                <!-- Category Widget -->
                                <div class="widget category">
                                    <!-- Widget Header -->
                                    <h5 class="widget-header">商家信息</h5>
                                    <div class="profile-thumb">
                                        <img src="" alt="" class="rounded-circle"/>
                                        <!--<span t-field="commonuser_info.user_image"
                                              t-options="{'widget': 'image', 'class': 'mx-auto d-block img-thumbnail'}"/>
                                    -->
                                    </div>
                                    <p>联系方式：</p>
                                </div>

                            </div>
                            <div class="sidebar">
                                <!-- Category Widget -->
                                <div class="widget category">
                                    <!-- Widget Header -->
                                    <h5 class="widget-header">您想在此推荐您的产品吗？</h5>
                                    <p>咨询热线：886-886-886</p>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </section>

            <!--============================
            =            Footer            =
            =============================-->
            <footer class="footer section section-sm">
                <!-- Container Start -->
                <div class="container">
                    <div class="row offset-md-1 offset-lg-0 block about">
                        <img src="/HRStore/static/src/images/logo.jpg" height="100" width="200"/>
                        <div class="footer-text">
                        </div>
                        <ul>
                            <li>
                                <a href="#">增值电信业务经营许可证：京B2-20080224</a>
                            </li>
                            <li>
                                <a href="#">值电信业务经营许可证（跨地区）： B2-20150210</a>
                            </li>
                            <li>
                                <a href="#">北京市网络食品销售第三方平台提供者备案：京网食A33010001</a>
                                <br/>
                            </li>
                            <li>
                                <a href="#">信息网络传播视听许可证：1109364号</a>
                            </li>
                            <li>
                                <a href="#">出版物网络交易平台服务经营备案号：新出发京备字第002号</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Container End -->
            </footer>
            <!-- Footer Bottom -->
            <footer class="footer-bottom">
                <!-- Container Start -->
                <div class="container">
                    <p type="center">Copyright © 2019.7-现在 HR商城 版权所有</p>
                </div>
                <!-- Container End -->
                <!-- To Top -->
                <div class="top-to">
                    <a id="top" class="" href="">
                        <i class="fa fa-angle-up"></i>
                    </a>
                </div>
            </footer>


        </body>
    </template>

</odoo>