<?xml version="1.0"?>
<odoo>
     <template id="supplier_orderlist" name="supplier_orderlist">
        <head>
            <t t-call-assets="HRStore.my_custom_assets" tjs="false"/>
            <t t-call-assets="HRStore.my_custom_assets" tcss="false"/>
        </head>

    <body class="body-wrapper">

    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <nav class="navbar navbar-expand-lg  navigation">
                        <a class="navbar-brand" href="index.html">
                            <img src="/HRStore/static/src/images/logo.jpg" height="100" width="220" />
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ml-auto main-nav ">
                                <li class="nav-item active">
                                    <a class="nav-link" href="/home">首页</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/products?type=2">培训产品</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/products?type=1">活动策划</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/products?type=3">精美商品</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/products?type=4">法律服务</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/customer_service">在线客服</a>
                                </li>
                            </ul>
                            <ul class="navbar-nav ml-auto mt-10">
                                <li class="nav-item">
                                    <a  href="index.html"><img src="/HRStore/static/src/images/my.png" height="60px" width="50px" /></a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!--==================================
    =          供货商查看待审核          =
    ===================================-->
    <section class="dashboard section">
	    <!-- Container Start -->
	    <div class="container">
		    <!-- Row Start -->
		    <div class="row">
			    <div class="col-md-10 offset-md-1 col-lg-4 offset-lg-0">
				    <div class="sidebar">
					    <!-- User Widget -->
					    <div class="widget user-dashboard-profile">
						    <!-- User Image -->
    						<div class="profile-thumb">
	    						<img src="/HRStore/static/src/images/user/user-thumb.jpg" alt="" class="rounded-circle" />
						    </div>
    						<!-- User Name -->
	    					<h5 class="text-center"><span id="username" t-esc="request.session.user_id"></span></h5>
                            <p><span id="u-tel" style="word-wrap:break-word;" t-esc="request.session.telephone"></span></p>
                            <a href="/supplier_updateInfo" class="btn btn-main-sm">编辑</a>
					    </div>
					<!-- Dashboard Links -->
					    <div class="widget user-dashboard-menu">
                            <ul>
                                <li><a href="/supplier_addProduct"> 发布商品</a></li>
                                <li><a href="/supplier_changeStatus"> 待审核</a></li>
                                <li><a href="/supplier_publishedProduct"> 已发布</a></li>
                                <li class="active"><a href="/supplier_orderlist"> 订单</a></li>
                                <li><a href="/login">退出登录</a></li>
                            </ul>
                        </div>
				    </div>
			    </div>
                <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-0">
                <!-- Recently Favorited -->
                <div class="widget dashboard-container my-adslist">
                    <h3 class="widget-header">订单</h3>
                        <table class="table table-responsive product-dashboard-table">
                        <thead>
                            <tr>
                                <th >订购人</th>
                                <th>产品信息</th>
                                <th class="text-center">预定时间</th>
                                <th class="text-center">状态</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="orders" t-as="order">
                                <td class="product-thumb"><span id="order_id" t-esc="order[0]" /></td>
                                <td class="product-details">
                                    <h3 class="title" t-esc="order[1]"/>
                                    <span id="price"><strong>价格: </strong><p t-esc="order[2]"/> </span>
                                    <span id="price" style="margin-bottom:10px;"><strong>类别: </strong>
                                        <t t-if="order[3] == '1'">
                                            <p>活动策划</p>
                                        </t>
                                        <t t-if="order[3] == '2'">
                                            <p>培训产品</p>
                                        </t>
                                        <t t-if="order[3] == '3'">
                                            <p>精美商品</p>
                                        </t>
                                        <t t-if="order[3] == '4'">
                                            <p>法律服务</p>
                                        </t>
                                    </span>
                                    <a href="goods-info.html">查看商品详细信息</a>
                                </td>
                                <td class="product-category"><span id="date" class="categories" t-esc="order[4]"></span></td>
                                <td class="product-category">
                                    <t t-if="order[5] == '0'">
                                        <span id="status">待处理</span>
                                    </t>
                                    <t t-if="order[5] == '1'">
                                        <span id="status">已完成</span>
                                    </t>
                                </td>
                                <td class="product-category">
                                    <form action="/deleteOrder">
                                        <input name="order_id" type="hidden" t-att-value="order[6]"/>
                                        <button class="btn btn-outline-danger">删除</button>
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                        </table>
                    </div>
                </div>
		    </div>
		    <!-- Row End -->
	    </div>
	    <!-- Container End -->
    </section>
<!--============================
=            Footer            =
=============================-->

