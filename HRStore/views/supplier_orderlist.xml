                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Container End -->
            </footer>
            <!-- Footer Bottom -->
    <footer class="footer-bottom">
        <!-- Container Start -->
        <div class="container">
            <p type="center">Copyright © 2019.7-现在 HR商城 版权所有</p>
        </div>
        <!-- Container End -->
        <!-- To Top -->
        <div class="top-to">
            <a id="top" class="" href=""><i class="fa fa-angle-up"></i></a>
        </div>
    </footer>

    </body>
     </template>
</odoo>