<?xml version="1.0"?>
<odoo>
    <!--页面  李甜甜 计科162 161002229   实现 何钰霖 计科162 161002219-->
    <template id="supplier_orderlist" name="supplier_orderlist">
        <head>
            <t t-call-assets="HRStore.my_custom_assets" tjs="false"/>
            <t t-call-assets="HRStore.my_custom_assets" tcss="false"/>
        </head>

        <body class="body-wrapper">

            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                             <nav class="navbar navbar-expand-lg  navigation">
                                <a class="navbar-brand" href="/home">
                                    <img src="/HRStore/static/src/images/logo.jpg" height="100" width="220"/>
                                </a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse"
                                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                    <ul class="navbar-nav ml-auto main-nav ">
                                        <li class="nav-item active">
                                            <form action="/home" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <button class="btn btn-link nav-link"
                                                        type="submit">首页
                                                </button>
                                            </form>
                                        </li>
                                        <li class="nav-item">
                                            <form action="/products" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <input type="hidden" name="type"
                                                       t-att-value="2"/>
                                                <button class="btn btn-link nav-link" style="color:black;"
                                                        type="submit">培训产品
                                                </button>
                                            </form>
                                        </li>
                                        <li class="nav-item">
                                            <form action="/products" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <input type="hidden" name="type"
                                                       t-att-value="1"/>
                                                <button class="btn btn-link nav-link" style="color:black;"
                                                        type="submit">活动策划
                                                </button>
                                            </form>
                                        </li>
                                        <li class="nav-item">
                                            <form action="/products" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <input type="hidden" name="type"
                                                       t-att-value="3"/>
                                                <button class="btn btn-link nav-link" style="color:black;"
                                                        type="submit">精美商品
                                                </button>
                                            </form>
                                        </li>
                                        <li class="nav-item">
                                            <form action="/products" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <input type="hidden" name="type"
                                                       t-att-value="4"/>
                                                <button class="btn btn-link nav-link" style="color:black;"
                                                        type="submit">法律服务
                                                </button>
                                            </form>
                                        </li>
                                        <li class="nav-item">
                                            <form action="/forum" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <button class="btn btn-link nav-link" style="color:black;"
                                                        type="submit">论坛
                                                </button>
                                            </form>
                                        </li>
                                        <li class="nav-item">
                                            <form action="/customer_service" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <button class="btn btn-link nav-link" style="color:black;"
                                                        type="submit">在线客服
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                    <t t-if="user_id">
                                        <ul class="navbar-nav ml-auto mt-10">
                                            <li class="nav-item">
                                                <form action="/user_profile" method="post">
                                                    <input type="hidden" name="csrf_token"
                                                           t-att-value="request.csrf_token()"/>
                                                    <input type="hidden" name="user_id"
                                                           t-att-value="user_id"/>
                                                    <input type="image"
                                                           src="\HRStore\static\src\images\my.png" height="60px"/>
                                                </form>
                                            </li>
                                        </ul>
                                    </t>
                                    <t t-else="">

                                        <ul class="navbar-nav ml-auto mt-10">
                                            <li class="nav-item">
                                                <a class="nav-link login-button" href="/login">登陆</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link add-button" href="/sign_up">注册</a>
                                            </li>
                                        </ul>
                                    </t>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </section>
            <!--==================================
            =          供货商查看待审核          =
            ===================================-->
            <section class="dashboard section">
                <!-- Container Start -->
                <div class="container">
                    <!-- Row Start -->
                    <div class="row">
                        <div class="col-md-10 offset-md-1 col-lg-4 offset-lg-0">
                            <div class="sidebar">
                                <!-- User Widget -->
                                <div class="widget user-dashboard-profile">
                                    <!-- User Image -->
                                    <t t-if="supplier">
                                        <div class="profile-thumb">
                                            <span t-field="supplier.user_image"
                                                  t-options="{'widget': 'image', 'class': 'mx-auto d-block img-thumbnail'}"/>
                                        </div>
                                        <!-- User Name -->
                                        <h5 class="text-center">
                                            <span id="username" t-esc="supplier.shopname"></span>
                                        </h5>
                                        <p>
                                            <span id="u-tel" style="word-wrap:break-word;"
                                                  t-esc="supplier.telephone"></span>
                                        </p>
                                        <p>
                                            <span id="u-tel" style="word-wrap:break-word;"
                                                  t-esc="supplier.address"></span>
                                        </p>
                                    </t>
                                    <a href="/supplier_updateInfo" class="btn btn-main-sm">编辑</a>
                                </div>
                                <!-- Dashboard Links -->
                                <div class="widget user-dashboard-menu">
                                    <ul>
                                        <li>
                                             <form action="/supplier_addProduct" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <button class="btn btn-link" style="color:black;"
                                                        type="submit"><i class="fa fa-user"></i>
                                                    发布商品
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <form action="/supplier_changeStatus" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <button class="btn btn-link" style="color:black;"
                                                        type="submit"><i class="fa fa-user"></i>
                                                    待审核
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <form action="/supplier_publishedProduct" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <button class="btn btn-link" style="color:black;"
                                                        type="submit"><i class="fa fa-user"></i>
                                                    已发布
                                                </button>
                                            </form>
                                        </li>
                                        <li class="active">
                                            <form action="/supplier_orderlist" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <button class="btn btn-link"
                                                        type="submit"><i class="fa fa-user"></i>
                                                    订单
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <form action="/logout" method="post">
                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="user_id"
                                                       t-att-value="user_id"/>
                                                <button class="btn btn-link" style="color:black;"
                                                        type="submit"><i class="fa fa-cog"></i>
                                                退出登录
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-0">
                            <!-- Recently Favorited -->
                            <div class="widget dashboard-container my-adslist">
                                <h3 class="widget-header">订单</h3>
                                <table class="table table-responsive product-dashboard-table">
                                    <thead>
                                        <tr>
                                            <th>订购人</th>
                                            <th>产品信息</th>
                                            <th>预定时间</th>
                                            <th>状态</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="orders" t-as="order">
                                            <td class="product-thumb text-center">
                                                <span id="order_id" t-esc="order[0]"/>
                                            </td>
                                            <td>
                                                <span id="name">
                                                    <form action="product_detail" method="post">
                                                        <input name="product_id" type="hidden" t-att-value="order[4]"/>
                                                        <input type="hidden" name="user_id"
                                                               t-att-value="user_id"/>
                                                        <button type="submit" class="btn btn-link" style="color:black">
                                                            <h5 t-esc="order[1]"/>
                                                        </button>
                                                    </form>
                                                </span>
                                                <br/>
                                                <span id="price">
                                                    <span>价格:</span>
                                                    <label t-esc="order[8]"/>
                                                </span>
                                                <br/>
                                                <span id="price">
                                                    <span>类别:</span>
                                                    <t t-if="order[3] == '1'">
                                                        <label>活动策划</label>
                                                    </t>
                                                    <t t-if="order[3] == '2'">
                                                        <label>培训产品</label>
                                                    </t>
                                                    <t t-if="order[3] == '3'">
                                                        <label>精美商品</label>
                                                    </t>
                                                    <t t-if="order[3] == '4'">
                                                        <label>法律服务</label>
                                                    </t>
                                                </span>
                                                <span id="">

                                                </span>
                                            </td>
                                            <td>
                                                <span id="date" class="categories" t-esc="order[5]"></span>
                                            </td>
                                            <td>
                                                <t t-if="order[6] == '0'">
                                                    <span id="status">待处理</span>
                                                </t>
                                                <t t-if="order[6] == '1'">
                                                    <span id="status">待付款</span>
                                                </t>
                                                <t t-if="order[6] == '2'">
                                                    <span id="status">已完成</span>
                                                </t>
                                            </td>
                                            <t t-if="order[6] == '1'">
                                                <td>
                                                    <form action="/ChangeOrderPrice" method="post">
                                                        <input type="hidden" name="csrf_token"
                                                               t-att-value="request.csrf_token()"/>
                                                        <input type="hidden" name="user_id"
                                                               t-att-value="user_id"/>
                                                        <input name="order_id" type="hidden"
                                                               t-att-value="order[7]"/>
                                                        <input name="order_price" type="text"
                                                               t-att-value="order[8]" class="form-control input-search"
                                                               style="width:100px;height:30px;"/>
                                                        <button class="btn btn-outline-success btn-sm">修改价格</button>
                                                    </form>
                                                </td>
                                            </t>
                                            <t t-if="order[6] == '0'">
                                                <td>
                                                    <form action="/ChangeOrder" method="post">
                                                        <input type="hidden" name="csrf_token"
                                                               t-att-value="request.csrf_token()"/>
                                                        <input type="hidden" name="user_id"
                                                               t-att-value="user_id"/>
                                                        <input name="order_id" type="hidden"
                                                               t-att-value="order[7]"/>
                                                        <button class="btn btn-outline-success btn-sm">通过</button>
                                                    </form>
                                                </td>
                                            </t>

                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Row End -->
                </div>
                <!-- Container End -->
            </section>
            <!--============================
            =            Footer            =
            =============================-->

            <!--============================
                        =            Footer            =
                        =============================-->
