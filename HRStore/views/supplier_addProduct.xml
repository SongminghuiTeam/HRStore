			            <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-0">
							<t t-if="message">
								<div class="alert alert-warning">
									<span t-esc="message"></span>
								</div>
							</t>
				            <!-- Edit Personal Info -->
            				<div class="widget personal-info">
	            				<h3 class="widget-header user">编辑产品信息</h3>
					            <form action="supplier_add" method="post">
						        <!-- pro-name -->
        						<div class="form-group">
        						    <label for="pro-name">产品名称</label>
		        				    <input name="pro_name" type="text" class="form-control" id="pro-name" />
									<!--<input type="hidden" name="userID" />-->
									<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
				        		</div>
						        <!-- File chooser -->
        						<div class="form-group choose-file">
		        					<i class="fa fa-user text-center"></i>
				        		    <input name="pro_image" type="file" class="form-control-file d-inline" id="input-file" />
                                </div>
						        <!-- price -->
						        <div class="form-group">
        						    <label for="price">价格</label>
		        				    <input name="pro_price" type="text" class="form-control" id="price" />
				        		</div>
						        <!-- type -->
        						<div class="form-group">
		        				    <label for="type">商品类型</label>
				        		    <!--<input name="pro_type" type="text" class="form-control" id="type" />-->
									<select name="pro_type" class="custom-select">
										<option value='1'>活动策划</option>
										<option value='2'>培训产品</option>
										<option value='3'>精美商品</option>
										<option value='4'>法律服务</option>
									</select>
						        </div>
        						<!-- detail -->
		        				<div class="form-group mb-30">
                          			<label for="detail">商品详情</label>
                  		        	<textarea name="pro_detail" class="form-control" id="detail" rows="8"></textarea>
              			        </div>
						        <!-- Submit button -->
        						<button class="btn btn-transparent">发布</button>
					            </form>
				            </div>
                        </div>
		            </div>
