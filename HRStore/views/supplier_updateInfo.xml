<?xml version="1.0"?>
<odoo>
     <template id="supplier_updateInfo" name="supplier_updateInfo">
        <head>
            <t t-call-assets="HRStore.my_custom_assets" tjs="false"/>
            <t t-call-assets="HRStore.my_custom_assets" tcss="false"/>
        </head>

        <body class="body-wrapper">
            <section>
	            <div class="container">
		            <div class="row">
			            <div class="col-md-12">
				            <nav class="navbar navbar-expand-lg  navigation">
					            <a class="navbar-brand" href="index.html">
						            <img src="/HRStore/static/src/images/logo.jpg" height="100" width="220" />
					            </a>
					            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					                <span class="navbar-toggler-icon"></span>
					            </button>
					            <div class="collapse navbar-collapse" id="navbarSupportedContent">
						            <ul class="navbar-nav ml-auto main-nav ">
                                        <li class="nav-item active">
                                            <a class="nav-link" href="/home">首页</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=2">培训产品</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=1">活动策划</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=3">精美商品</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=4">法律服务</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/customer_service">在线客服</a>
                                        </li>
                                    </ul>
						            <ul class="navbar-nav ml-auto mt-10">
                                        <li class="nav-item">
            								<a href="index.html" /><img src="images/my.png" height="60px" width="50px" />
			            				</li>
						            </ul>
					            </div>
				            </nav>
			            </div>
		            </div>
	            </div>
            </section>
            <!--==================================
            =            User Profile            =
            ===================================-->

            <section class="user-profile section">
            	<div class="container">
            		<div class="row">
			            <div class="col-md-10 offset-md-1 col-lg-4 offset-lg-0">
				            <div class="sidebar">
					            <!-- User Widget -->
					            <div class="widget user-dashboard-profile">
            						<!-- User Image -->
			            			<div class="profile-thumb">
							            <img src="/HRStore/static/src/images/user/user-thumb.jpg" alt="" class="rounded-circle" />
                                    </div>
						            <!-- User Name -->
						            <h5 class="text-center"><span id="username" t-esc="request.session.user_id"></span></h5>
									<p><span id="u-tel" style="word-wrap:break-word;" t-esc="request.session.telephone"></span></p>
					            </div>
					            <!-- Dashboard Links -->
            					<div class="widget user-dashboard-menu">
			            			<ul>
						            	<li><a href="/supplier_addProduct"> 发布商品</a></li>
                                    	<li><a href="/supplier_changeStatus"> 待审核</a></li>
										<li><a href="/supplier_publishedProduct"> 已发布</a></li>
                                    	<li><a href="ghs-order.html"> 订单</a></li>
                                    	<li><a href="/login">退出登录</a></li>
						            </ul>
					            </div>
				            </div>
			            </div>
			            <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-0">
							<t t-if="message">
								<div class="alert alert-warning">
									<span t-esc="message"></span>
								</div>
							</t>
            				<!-- Edit Personal Info -->
			            	<div class="widget personal-info">
            					<h3 class="widget-header user">修改个人信息</h3>
			            		<form action="supplier_updateDetailed">
						            <!-- Name -->
            						<div class="form-group">
			            			    <label for="shopname">商户名</label>
						                <input name="shopname" type="text" class="form-control" t-att-value="supplier.shopname" />
										<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
						            </div>
						            <!-- File chooser -->
						            <div class="form-group choose-file">
							            <i class="fa fa-user text-center"></i>
						                <input type="file" class="form-control-file d-inline" id="input-file" />
						            </div>
						            <!-- tel -->
            						<div class="form-group">
			            			    <label for="tel">电话号码</label>
						                <input name="telephone" type="text" class="form-control" t-att-value="supplier.telephone" />
						            </div>
            						<!-- address -->
			            			<div class="form-group">
						                <label for="address">地址</label>
						                <input name="address" type="text" class="form-control" t-att-value="supplier.address" />
						            </div>
						            <!-- Submit button -->
						            <button class="btn btn-transparent">保存</button>
					            </form>
				            </div>
				            <!-- Change Password -->
				            <div class="widget change-password">
					            <h3 class="widget-header user">修改密码</h3>
					            <form action="supplier_updatepwd" method="post">
						            <!-- Current Password -->
						            <div class="form-group">
						                <label for="current-password">旧密码</label>
						                <input name="old_pwd" type="password" class="form-control" id="current-password" />
									    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
						            </div>
						            <!-- New Password -->
						            <div class="form-group">
						                <label for="new-password">新密码</label>
						                <input name="new_pwd" type="password" class="form-control" id="new-password" />
                                    </div>
						            <!-- Confirm New Password -->
						            <div class="form-group">
						                <label for="confirm-password">确认新密码</label>
						                <input name="ensure_pwd" type="password" class="form-control" id="confirm-password" />
						            </div>
						            <!-- Submit Button -->
						            <button class="btn btn-transparent">保存</button>
					            </form>
				            </div>
			            </div>
		            </div>
	            </div>
            </section>

            <!--============================
            =            Footer            =
            =============================-->
            <footer class="footer section section-sm">
                <!-- Container Start -->
                <div class="container">
                    <div class="row offset-md-1 offset-lg-0 block about">
                        <img src="\HRStore\static\src\images\logo.jpg" height="100" width="200" />
                        <div class="footer-text">
                        </div>
                        <ul>
                            <li>
                                <a href="#">增值电信业务经营许可证：京B2-20080224</a>
                            </li>
                            <li>
                                <a href="#">值电信业务经营许可证（跨地区）： B2-20150210</a>
                            </li>
                            <li>
                                <a href="#">北京市网络食品销售第三方平台提供者备案：京网食A33010001</a>
                                <br/>
                            </li>
                            <li>
                                <a href="#">信息网络传播视听许可证：1109364号</a>
                            </li>
                            <li>
                                <a href="#">出版物网络交易平台服务经营备案号：新出发京备字第002号</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Container End -->
            </footer>
            <!-- Footer Bottom -->
            <footer class="footer-bottom">
	            <!-- Container Start -->
	            <div class="container">
		            <p type="center">Copyright © 2019.7-现在 HR商城 版权所有</p>
	            </div>
	            <!-- Container End -->
	            <!-- To Top -->
	            <div class="top-to">
		            <a id="top" class="" href=""><i class="fa fa-angle-up"></i></a>
	            </div>
            </footer>
        </body>
     </template>
</odoo>