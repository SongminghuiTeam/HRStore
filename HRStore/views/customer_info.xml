<?xml version="1.0"?>
<odoo>
<!--页面  李甜甜 计科162 161002229   实现 陈婉菁 计科162 161002218-->
    <template id="customer_info" name="customer_info">
        <head>
            <t t-call-assets="HRStore.my_custom_assets" tjs="false"/>
            <t t-call-assets="HRStore.my_custom_assets" tcss="false"/>
            <script type="text/javascript">
                window.onload = function()
                {
                var Jjian = document.getElementById("jian");
                var Jjia = document.getElementById("jia");
                var zj = document.getElementsByTagName("input")[0];
                var i = 1;

                Jjia.onclick = function()
                {
                //zj.value = ++i;
                i = zj.value;
                zj.value = ++i;

                }
                Jjian.onclick = function()
                {
                i = zj.value;
                if(i!=0){
                zj.value = --i;
                }
                }

                }
            </script>
        </head>

        <body class="body-wrapper">
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <nav class="navbar navbar-expand-lg  navigation">
                                <a class="navbar-brand" href="/home">
                                    <img src="/HRStore/static/src/images/logo.jpg" height="100" width="220"/>
                                </a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse"
                                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                    <ul class="navbar-nav ml-auto main-nav ">
                                        <li class="nav-item active">
                                            <a class="nav-link" href="/home">首页</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=2">培训产品</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=1">活动策划</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=3">精美商品</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/products?type=4">法律服务</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/customer_service">在线客服</a>
                                        </li>
                                    </ul>
                                    <t t-if="request.session.user_id">
                                        <ul class="navbar-nav ml-auto mt-10">
                                            <li class="nav-item">
                                                <form action="/user_profile" method="post">
                                                    <input type="hidden" name="csrf_token"
                                                           t-att-value="request.csrf_token()"/>
                                                    <input type="hidden" name="user_id"
                                                           t-att-value="request.session.user_id"/>
                                                    <input type="image"
                                                           src="\HRStore\static\src\images\my.png" height="60px"/>
                                                </form>
                                            </li>
                                        </ul>
                                    </t>
                                    <t t-else="">
                                        <ul class="navbar-nav ml-auto mt-10">
                                            <li class="nav-item">
                                                <a class="nav-link login-button" href="/login">登陆</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link add-button" href="/sign_up">注册</a>
                                            </li>
                                        </ul>
                                    </t>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </section>
            <!--==================================
            =            User Profile            =
            ===================================-->
            <section class="dashboard section">
                <!-- Container Start -->
                <div class="container">
                    <!-- Row Start -->
                    <div class="row">
                        <div class="col-md-10 offset-md-1 col-lg-4 offset-lg-0">
                            <div class="sidebar">
                                <!-- User Widget -->
                                <div class="widget user-dashboard-profile">
                                    <!-- User Image -->
                                    <div class="profile-thumb">
                                        <!--<img src="" alt="" class="rounded-circle" />-->
                                        <span t-field="commonuser_info.user_image"
                                              t-options="{'widget': 'image', 'class': 'mx-auto d-block img-thumbnail'}"/>
                                    </div>
                                    <!-- User Name -->
                                    <h5 class="text-center">
                                        <span t-esc="commonuser_info.username"></span>
                                    </h5>
                                    <p>
                                        <span t-esc="commonuser_info.telephone"></span>
                                    </p>
                                    <p>
                                        <span t-esc="commonuser_info.address"></span>
                                    </p>
                                    <a href="/customer_modifyInfo" class="btn btn-main-sm">编辑</a>
                                </div>
                                <!-- Dashboard Links -->
                                <div class="widget user-dashboard-menu">
                                    <ul>
                                        <li class="active">
                                            <a href="/cart">
                                                <i class="fa fa-user"></i>
                                                购物车
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/order">
                                                <i class="fa fa-user"></i>
                                                订单
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/logout">
                                                <i class="fa fa-cog"></i>
                                                退出登录
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-0">
                            <!-- Recently Favorited -->
                            <t t-if="message">
                                <div class="alert alert-warning">
                                    <span t-esc="message"></span>
                                </div>
                            </t>
                            <div class="widget dashboard-container my-adslist">
                                <h3 class="widget-header">购物车</h3>
                                <table class="table table-responsive product-dashboard-table">
                                    <thead>
                                        <tr>
                                            <th>商品图片</th>
                                            <th></th>
                                            <th>商品</th>
                                            <th>数量</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <t t-if="cart_products">
                                        <t t-foreach="cart_products" t-as="cart_product">
                                            <tbody>

                                                <input type="hidden" name="csrf_token"
                                                       t-att-value="request.csrf_token()"/>
                                                <tr>

                                                    <td class="product-thumb">
                                                        <!--<img width="80px" height="auto" t-field="cart_product[0].pro_image"
                                                             alt="image description" />-->
                                                        <span t-field="cart_product[0].pro_image"
                                                              t-options="{'widget': 'image', 'class': 'mx-auto d-block img-thumbnail'}"/>
                                                    </td>
                                                    <td>
                                                        <span></span>
                                                    </td>
                                                    <td>
                                                        <!--<h3 class="title">Macbook Pro 15inch（商品名称）</h3>-->
                                                        <h3 class="title">
                                                            <span t-esc="cart_product[0].pro_name"
                                                                  class="title"></span>
                                                        </h3>
                                                        <span class="add-id" id="business">
                                                            <span>商家:</span>
                                                            <label t-esc="cart_product[2]"></label>

                                                        </span>
                                                        <br/>
                                                        <span id="price">
                                                            <span>价格:</span>
                                                            <label t-esc="cart_product[0].pro_price"></label>

                                                        </span>
                                                    </td>
                                                    <form action="/cart_product_purchase" method="post">
                                                        <td>
                                                            <span class="jian" id="jian" style="cursor:pointer;">-
                                                            </span>
                                                            <input name="pro_num" type="text"
                                                                   t-att-value="cart_product[1]"
                                                                   style="width:50px;text-align:center;height:22px;"/>
                                                            <span class="jia" id="jia" style="cursor:pointer;">+</span>
                                                        </td>
                                                        <td text="center">
                                                            <center>
                                                                <input type="hidden" name="csrf_token"
                                                                       t-att-value="request.csrf_token()"/>
                                                                <input name="user_id" type="hidden"
                                                                       t-att-value="user_info.user_id"/>
                                                                <input name="product_id" type="hidden"
                                                                       t-att-value="cart_product[0].id"/>
                                                                <input name="cart_id" type="hidden"
                                                                       t-att-value="cart_product[3]"/>
                                                                <button class="btn btn-outline-success btn-sm">购买
                                                                </button>

                                                            </center>
                                                        </td>
                                                    </form>
                                                    <td>
                                                        <form action="/cart_product_delete" method="post">
                                                            <!--<a class="delete" href="/cart_product_delete">-->
                                                            <input type="hidden" name="csrf_token"
                                                                   t-att-value="request.csrf_token()"/>
                                                            <input name="cart_id" type="hidden"
                                                                   t-att-value="cart_product[3]"/>
                                                            <button class="btn btn-default btn-circle btn-outline-danger">
                                                                <i class="fa fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>

                                            </tbody>
                                        </t>
                                    </t>
                                </table>

                            </div>
                        </div>
                    </div>
                    <!-- Row End -->
                </div>
                <!-- Container End -->
            </section>
            <!--============================
            =            Footer            =
            =============================-->
            <footer class="footer section section-sm">
                <!-- Container Start -->
                <div class="container">
                    <div class="row offset-md-1 offset-lg-0 block about">
                        <img src="/HRStore/static/src/images/logo.jpg" height="100" width="200"/>
                        <div class="footer-text">
                        </div>
                        <ul>
                            <li>
                                <a href="#">增值电信业务经营许可证：京B2-20080224</a>
                            </li>
                            <li>
                                <a href="#">值电信业务经营许可证（跨地区）： B2-20150210</a>
                            </li>
                            <li>
                                <a href="#">北京市网络食品销售第三方平台提供者备案：京网食A33010001
                                </a>
                            </li>
                            <li>
                                <a href="#">信息网络传播视听许可证：1109364号</a>
                            </li>
                            <li>
                                <a href="#">出版物网络交易平台服务经营备案号：新出发京备字第002号</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Container End -->
            </footer>
            <!-- Footer Bottom -->
            <footer class="footer-bottom">
                <!-- Container Start -->
                <div class="container">
                    <p type="center">Copyright © 2019.7-现在 HR商城 版权所有</p>
                </div>
                <!-- Container End -->
                <!-- To Top -->
                <div class="top-to">
                    <a id="top" class="" href="">
                        <i class="fa fa-angle-up"></i>
                    </a>
                </div>
            </footer>


        </body>

    </template>

</odoo>